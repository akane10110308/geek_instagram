<div class="frame">
<div class="box0"> 
<img src="https://th.bing.com/th/id/OIP.sOnGkui_f0EFpZIexZCZFwAAAA?w=182&h=182&c=7&r=0&o=5&dpr=1.5&pid=1.7">
<h3>アカウント作成</h3>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="field">
     <div class="box1">
      <label for="text1" id="l_text1">ユーザーネーム</label>
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="box1">
      <label for="text1" id="l_text1">メール</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
  </div>

  
  <div class="box1">
    <div class="field">
      <label for="text2" id="l_text2">パスワード
        <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      </label>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

 <div class="box1">
  <label for="text2" id="l_text2">パスワード
   <%= f.label :password_confirmation %><br />
  </label>
  <div class="field">
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
</div>
<div class="actions">
  <button class="btn3" type="submit">サインアップ</button>
</div>
    <% end %>

<div class="frame">
  <%= render "users/shared/links" %>
</div>
